<Window x:Class="CourseProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" VerticalAlignment="Center">
            <Label Content="Логин"/>
            <TextBox MinHeight="30" MaxHeight="50" MaxLength="10"/>
            <Label Content="Пароль"/>
            <PasswordBox MinHeight="30" MaxHeight="50" MaxLength="10"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="Admin" Content ="Войти"  MinHeight="30" MaxHeight="80"></Button>
            <Label Content="Или" HorizontalContentAlignment="Center"/>
            <Button x:Name="Guest" Content ="Войти как гость" MinHeight="30" MaxHeight="80" Click="Button_Click_1"></Button>
        </StackPanel>
    </Grid>
</Window>
